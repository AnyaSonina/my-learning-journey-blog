<li>
  <article class="snippet">
    <img
      src="{{ post.data.image }}"
      alt="{{ post.data.imageAlt }}"
      class="snippet__image"
    />
    <h3 class="snippet__title">
      <a href="{{ post.url }}">{{ post.data.title }}</a>
    </h3>
    <p class="snippet__meta">
      by <span>{{ post.data.author }}</span>
    </p>
    <p class="snippet__body">{{ post.data.description }}</p>
    <a href="{{ post.data.liveBtn }}" class="btn btn--primary">Live</a>
    <a href="{{ post.data.repoBtn }}" class="btn btn--secondary">Repo</a>
    <a href="{{ post.url }}" class="btn btn--primary">Continue Reading</a>
  </article>
</li>
